<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.bookclub.ui.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bookclub.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bookclub.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_pop_including_loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.bookclub.ui.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment" />
    </fragment>
    <fragment
        android:id="@+id/clubsFragment"
        android:name="com.example.bookclub.ui.fragments.ClubsFragment"
        android:label="fragment_clubs"
        tools:layout="@layout/fragment_clubs" >
        <action
            android:id="@+id/action_clubsFragment_to_selectClubBookFragment"
            app:destination="@id/selectClubBookFragment" />
        <action
            android:id="@+id/action_clubsFragment_to_clubTopicsFragment"
            app:destination="@id/clubTopicsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.example.bookclub.ui.fragments.SearchResultFragment"
        android:label="fragment_search_result"
        tools:layout="@layout/fragment_search_result" >
        <argument
            android:name="searchTerm"
            app:argType="string" />
        <action
            android:id="@+id/action_searchResultFragment_to_searchBookFragment"
            app:destination="@id/searchBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchBookFragment"
        android:name="com.example.bookclub.ui.fragments.SearchBookFragment"
        android:label="fragment_search_book"
        tools:layout="@layout/fragment_search_book" >
        <argument
            android:name="isbn"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/createClubFragment"
        android:name="com.example.bookclub.ui.fragments.CreateClubFragment"
        android:label="fragment_create_club"
        tools:layout="@layout/fragment_create_club" >
        <argument
            android:name="book"
            app:argType="com.example.bookclub.models.DatabaseBook" />
    </fragment>
    <fragment
        android:id="@+id/selectClubBookFragment"
        android:name="com.example.bookclub.ui.fragments.SelectClubBookFragment"
        android:label="fragment_select_club_book"
        tools:layout="@layout/fragment_select_club_book" >
        <action
            android:id="@+id/action_selectClubBookFragment_to_createClubFragment"
            app:destination="@id/createClubFragment" />
    </fragment>
    <fragment
        android:id="@+id/clubTopicsFragment"
        android:name="com.example.bookclub.ui.fragments.ClubTopicsFragment"
        android:label="fragment_club_topics"
        tools:layout="@layout/fragment_club_topics" >
        <argument
            android:name="club"
            app:argType="com.example.bookclub.models.Club" />
    </fragment>
</navigation>