<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.text.Html"/>

        <variable
            name="searchBook"
            type="com.example.bookclub.models.SearchBook" />
        <variable
            name="viewModel"
            type="com.example.bookclub.viewModels.SearchBookViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/book_img"
                android:layout_width="125dp"
                android:layout_height="150dp"
                app:bindImage="@{searchBook.image}"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/search_for_books" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@{searchBook.title}"
                android:gravity="fill"
                app:layout_constraintStart_toEndOf="@id/book_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@{searchBook.authors}"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toEndOf="@id/book_img"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/publisher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@{searchBook.publisher}"
                app:layout_constraintTop_toBottomOf="@id/author"
                app:layout_constraintStart_toEndOf="@id/book_img"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/synopsys"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scrollHorizontally="false"
                android:layout_margin="8dp"
                android:maxLines="8"
                android:ellipsize="end"
                android:text="@{searchBook.synopsys}"
                app:layout_constraintStart_toEndOf="@id/book_img"
                app:layout_constraintTop_toBottomOf="@id/publisher"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_to_list_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/plus_reading_list"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                app:layout_constraintTop_toBottomOf="@id/book_img"
                app:layout_constraintStart_toStartOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>